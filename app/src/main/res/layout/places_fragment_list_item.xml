<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/half_margin"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageview_places_list_item_image"
        android:layout_width="@dimen/list_imageview_size"
        android:layout_height="@dimen/list_imageview_size"/>

    <LinearLayout
        android:layout_marginStart="@dimen/half_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_places_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textview_places_list_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"/>
    </LinearLayout>

</LinearLayout>
